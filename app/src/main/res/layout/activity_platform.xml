<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="155dp"
            android:layout_marginTop="60dp"
            android:layout_weight="3"
            android:textSize="30sp"
            android:background="@drawable/shapes1"
            android:gravity="center"
            android:textAllCaps="false"
            android:onClick="work"
            android:text="Platform 1"
            android:textColor="@color/black"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="155dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/shapes2"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:onClick="work"
            android:text="Platform 2"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="155dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/shapes3"
            android:textAllCaps="false"
            android:text="Platform 3"
            android:textSize="30sp"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="155dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/shapes4"
            android:textAllCaps="false"
            android:text="Platform 4"
            android:onClick="clean"
            android:textSize="30sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
</LinearLayout>

